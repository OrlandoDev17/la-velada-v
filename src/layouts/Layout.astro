---
import '../styles/global.css';
import Header from '../sections/Header.astro';
import Footer from '../sections/Footer.astro';
import '@fontsource/average-sans';
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <title>
      La Velada del Año 5 | Evento de boxeo de streamers y creadores de
      contenido
    </title>
    <meta
      name="description"
      content="La Velada del Año 5 es un evento de boxeo de streamers y creadores de contenido. ¡No te lo pierdas!"
    />
    <meta
      name="keywords"
      content="La Velada del Año 5, boxeo, streamers, creadores de contenido, evento, entretenimiento"
    />

    <meta name="author" content="Orlando López" />
    <meta
      property="og:title"
      content="La Velada del Año 5 | Evento de boxeo de streamers y creadores de contenido"
    />
    <meta
      property="og:description"
      content="La Velada del Año 5 es un evento de boxeo de streamers y creadores de contenido. ¡No te lo pierdas!"
    />

    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  </head>
  <body>
    <Header />
    <main>
      <slot />
    </main>
    <Footer />
